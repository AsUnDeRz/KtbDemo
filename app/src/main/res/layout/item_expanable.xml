<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgKtb"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/icon_ktb" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/title_customer_namer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="ชื่อ-นามสกุล "
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/char_normal" />

                <RelativeLayout
                    android:id="@+id/imgRotateName"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/triangle" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/correctName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/title_customer_namer"
                    android:tint="#59dd0d"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done_white_36dp" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expenableName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:ael_duration="1000"
                app:ael_expanded="false"
                app:ael_interpolator="linearOutSlowIn">

                <include layout="@layout/item_nam_th" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="0" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/title_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="ที่อยู่ตามทะเบียนบ้าน"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/char_normal" />

                <RelativeLayout
                    android:id="@+id/imgRotateAddress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/triangle" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/correctAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/title_customer_address"
                    android:tint="#59dd0d"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done_white_36dp" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expenableAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:ael_duration="1000"
                app:ael_expanded="false"
                app:ael_interpolator="linearOutSlowIn">

                <include layout="@layout/item_address" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="0" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/title_customer_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="Customer Information"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/char_normal" />

                <RelativeLayout
                    android:id="@+id/imgRotateInfo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/triangle" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/correctInfomation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/title_customer_info"
                    android:tint="#59dd0d"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done_white_36dp" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expenableInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:ael_duration="1000"
                app:ael_expanded="false"
                app:ael_interpolator="linearOutSlowIn">

                <include layout="@layout/item_infomation" />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="0" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/title_customer_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="Signature"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/char_normal" />

                <RelativeLayout
                    android:id="@+id/imgRotateSignature"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/triangle" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/correctSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/title_customer_signature"
                    android:tint="#59dd0d"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done_white_36dp" />

            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expenableSignature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:ael_duration="1000"
                app:ael_expanded="false"
                app:ael_interpolator="linearOutSlowIn">

                <include layout="@layout/item_signature" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1" />

</LinearLayout>

