<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:text="สัญชาติ"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toStartOf="@+id/edtNational"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="ประเทศที่เกิด"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="วุฒิการศึกษา"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="สถานภาพสมรส"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <EditText
            android:id="@+id/edtNational"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtCountryBorn"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView20"
            app:layout_constraintVertical_bias="0.476" />

        <EditText
            android:id="@+id/edtCountryBorn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtEducation"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/edtNational"
            app:layout_constraintTop_toTopOf="@+id/textView21" />

        <EditText
            android:id="@+id/edtEducation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtStatus"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toStartOf="@+id/edtCountryBorn"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <EditText
            android:id="@+id/edtStatus"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtPhone"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/edtEducation"
            app:layout_constraintTop_toTopOf="@+id/textView23" />

        <android.support.v7.widget.CardView
            android:id="@+id/btnClearInfomation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@android:color/holo_red_light"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_clear_white_36dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="โทรศัพท์"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/edtStatus"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
