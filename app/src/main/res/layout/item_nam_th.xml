<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="724dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:text="คำนำหน้าชื่อ (ไทย)"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toStartOf="@+id/edtPrefixTh"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPrefixTh"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtFirstnameTh"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.628" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ชื่อ (ไทย)"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtFirstnameTh"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtLastnameTh"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/edtPrefixTh"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:text="นามสกุล (ไทย)"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/edtFirstnameTh"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/edtLastnameTh"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtPrefixEn"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="คำนำหน้าชื่อ (อังกฤษ)"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edtPrefixEn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtFirstnameEn"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/edtFirstnameTh"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.379" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ชื่อ (อังกฤษ)"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtFirstnameEn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtLastnameEn"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/edtPrefixEn"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="นามสกุล (อังกฤษ)"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtLastnameEn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtIdnumber"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/edtLastnameTh"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="เลขที่บัตรประชาชน"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันหมดอายุบัตร (พ.ศ.)"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView29"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="วัน/เดือน/ปีเกิด (พ.ศ.)"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อายุ"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView31"
        app:layout_constraintEnd_toEndOf="@+id/textView30"
        app:layout_constraintTop_toTopOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="เพศ"
        android:textSize="@dimen/char_small"
        app:layout_constraintEnd_toEndOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/edtIdnumber"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtExpiredate"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/edtFirstnameEn"
        app:layout_constraintTop_toTopOf="@+id/textView29"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/edtBirthdate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtAge"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView31"
        app:layout_constraintStart_toStartOf="@+id/edtIdnumber"
        app:layout_constraintTop_toTopOf="@+id/textView31" />

    <EditText
        android:id="@+id/edtGender"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView33"
        app:layout_constraintStart_toStartOf="@+id/edtBirthdate"
        app:layout_constraintTop_toTopOf="@+id/textView33" />

    <EditText
        android:id="@+id/edtExpiredate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtBirthdate"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView30"
        app:layout_constraintStart_toStartOf="@+id/edtLastnameEn"
        app:layout_constraintTop_toTopOf="@+id/textView30" />

    <EditText
        android:id="@+id/edtAge"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edttext"
        android:ems="10"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/edtGender"
        android:paddingStart="8dp"
        android:textSize="@dimen/char_small"
        app:layout_constraintBottom_toBottomOf="@+id/textView32"
        app:layout_constraintStart_toStartOf="@+id/edtExpiredate"
        app:layout_constraintTop_toTopOf="@+id/textView32" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootViewAddress"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtGender">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="ที่อยู่"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toStartOf="@+id/edtAddress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="จังหวัด"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="อำเภอ/เขต"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="ตำบล/แขวง"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="รหัสไปรษณีย์"
            android:textSize="@dimen/char_small"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtProvince"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView20"
            app:layout_constraintVertical_bias="0.476" />

        <EditText
            android:id="@+id/edtProvince"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtArea"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/edtAddress"
            app:layout_constraintTop_toTopOf="@+id/textView21" />

        <EditText
            android:id="@+id/edtArea"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtSubArea"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toStartOf="@+id/edtProvince"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <EditText
            android:id="@+id/edtSubArea"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:nextFocusDown="@id/edtPostalCode"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/edtArea"
            app:layout_constraintTop_toTopOf="@+id/textView23" />

        <EditText
            android:id="@+id/edtPostalCode"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edttext"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:textSize="@dimen/char_small"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintStart_toStartOf="@+id/edtSubArea"
            app:layout_constraintTop_toTopOf="@+id/textView24" />

    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/btnClearName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/colorRed"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_clear_white_36dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btnScan"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@+id/space">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Scan"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <Space
        android:id="@+id/space"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rootViewAddress" />


</android.support.constraint.ConstraintLayout>
